		"jest": "^29.7.0"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testMatch": [
			"**/__tests__/**/*.js",
			"**/?(*.)+(spec|test).js"
		]
	}
